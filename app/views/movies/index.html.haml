%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class => ('hilite' if @hilite == 'title'), :id => "title_header"}= link_to "Movie Title", movies_path(:sort_by => 'title')
      %th{:class => ('hilite' if @hilite == 'rating'), :id => "rating_header"}= link_to "Ratings", movies_path(:sort_by => 'rating')
      %th{:class => ('hilite' if @hilite == 'release_date'), :id => "relese_date_header"}= link_to "Release Date", movies_path(:sort_by => 'release_date')
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
